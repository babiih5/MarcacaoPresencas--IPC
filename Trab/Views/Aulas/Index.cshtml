@model IEnumerable<Trab.Models.Aula>

@{
    ViewData["Title"] = "Aulas";
    var cadeiras = ViewBag.Cadeiras as List<string> ?? new();
    var turmas = ViewBag.Turmas as List<string> ?? new();
}

<main role="main" class="container my-4" aria-labelledby="page-title">
    <h1 id="page-title" class="display-4 mb-4">Aulas</h1>

    <!-- Filtros -->
    <form method="get" class="mb-4 d-flex flex-wrap gap-2" role="search" aria-label="Filtros de Aulas">
        <select name="cadeira" class="btn btn-danger" aria-label="Filtrar por Cadeira">
            <option value="">Cadeira</option>
            @foreach (var c in cadeiras)
            {
                <option value="@c">@c</option>
            }
        </select>

        <select name="turma" class="btn btn-danger" aria-label="Filtrar por Turma">
            <option value="">Turmas</option>
            @foreach (var t in turmas)
            {
                <option value="@t">@t</option>
            }
        </select>

        <div class="dropdown">
            <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownData" data-bs-toggle="dropdown" aria-expanded="false">
                Datas
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownData">
                <li><input type="date" name="data" class="dropdown-item" aria-label="Selecionar Data" /></li>
            </ul>
        </div>

        <button type="submit" class="btn btn-outline-dark" aria-label="Aplicar Filtros">Filtrar</button>
    </form>

    <!-- Tabela -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle text-center" aria-describedby="descricao-aulas">
            <caption id="descricao-aulas" class="visually-hidden">
                Tabela com a lista de aulas, incluindo cadeira, turma, data, horário e opções.
            </caption>
            <thead>
                <tr>
                    <th scope="col">Cadeira</th>
                    <th scope="col">Turma</th>
                    <th scope="col">Data</th>
                    <th scope="col">Início</th>
                    <th scope="col">Fim</th>
                    <th scope="col">Presenças</th>
                    <th scope="col">Ver Presenças</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-turma-id="@item.Turma?.Id">
                        <td>@item.Turma?.Cadeira</td>
                        <td>@item.Turma?.Nome</td>
                        <td>@item.DataAula.ToString("dd/MM/yyyy")</td>
                        <td>@item.Turma?.HorarioInicio?.ToString(@"hh\:mm")</td>
                        <td>@item.Turma?.HorasFim?.ToString(@"hh\:mm")</td>
                        <td class="presencas-btn-container">
                            @if (item.Turma?.PresencasAtivas == false)
                            {
                                <button type="button"
                                        class="btn btn-danger toggle-presencas"
                                        data-turma-id="@item.Turma?.Id"
                                        data-status="false"
                                        aria-label="Ativar presenças para a aula de @item.Turma?.Cadeira">
                                    Ativar Presenças
                                </button>
                            }
                            else
                            {
                                <button type="button"
                                        class="btn btn-success toggle-presencas"
                                        data-turma-id="@item.Turma?.Id"
                                        data-status="true"
                                        aria-label="Desativar presenças para a aula de @item.Turma?.Cadeira">
                                    Desativar Presenças
                                </button>
                            }
                        </td>
                        <td>
                            <a asp-controller="Presencas" asp-action="Index" class="btn btn-danger" aria-label="Ver presenças da aula de @item.Turma?.Cadeira">
                                Ver Presenças
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Attach event handler using event delegation
            // This way it will work even for dynamically added elements
            $(document).on('click', '.toggle-presencas', function() {
                const btn = $(this);
                const turmaId = btn.data('turma-id');
                const currentStatus = btn.data('status') === 'true';
                const container = btn.parent();

                // Show loading state
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processando...');

                $.ajax({
                    url: '@Url.Action("AtivarPresencas", "Turmas")/' + turmaId,
                    type: 'GET',
                    success: function() {
                        // Update button appearance based on new status (opposite of current)
                        if (currentStatus) {
                            // Was active, now inactive
                            container.html(`
                                <button type="button"
                                   class="btn btn-danger toggle-presencas"
                                   data-turma-id="${turmaId}"
                                   data-status="false"
                                   aria-label="Ativar presenças">
                                    Ativar Presenças
                                </button>
                            `);
                        } else {
                            // Was inactive, now active
                            container.html(`
                                <button type="button"
                                   class="btn btn-success toggle-presencas"
                                   data-turma-id="${turmaId}"
                                   data-status="true"
                                   aria-label="Desativar presenças">
                                    Desativar Presenças
                                </button>
                            `);
                        }
                    },
                    error: function(error) {
                        console.error('Error:', error);
                        alert('Ocorreu um erro ao processar o pedido. Por favor, tente novamente.');
                        btn.prop('disabled', false).text(currentStatus ? 'Desativar Presenças' : 'Ativar Presenças');
                    }
                });
            });
        });
    </script>
}

