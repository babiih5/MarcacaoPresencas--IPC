@model Trab.Models.Aluno

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalhes do Aluno";
}

<main role="main" class="container px-3" aria-labelledby="detalhesAlunoTitle">
    <h1 id="detalhesAlunoTitle" class="my-3 fs-3 fs-md-1">Detalhes do Aluno</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">@Model.Nome</h5>
                </div>
                <div class="card-body p-3 p-md-4">
                    <div role="form" aria-labelledby="infoTitle">
                        <div id="infoTitle" class="sr-only">Informações do aluno</div>

                        <div class="form-group mb-3">
                            <label class="form-label">Nome:</label>
                            <div class="form-control bg-light">
                                @Html.DisplayFor(model => model.Nome)
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Número Mecanográfico:</label>
                            <div class="form-control bg-light">
                                @Html.DisplayFor(model => model.Al)
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label">Email:</label>
                            <div class="form-control bg-light">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>

                        <div class="form-group mt-4 d-flex flex-column flex-sm-row gap-2">
                            <a asp-controller="AlunosTurma" asp-action="Index"
                               asp-route-id="@ViewBag.IdTurma"
                               class="btn btn-secondary w-100 w-sm-auto"
                               aria-label="Voltar para a lista de alunos">
                                Voltar para Lista
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
