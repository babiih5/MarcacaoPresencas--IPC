@model Trab.Models.Aluno

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalhes do Aluno";
}

<main role="main" class="container px-3" aria-labelledby="detalhesAlunoTitle">
    <h1 id="detalhesAlunoTitle" class="my-3 fs-3 fs-md-1">Detalhes do Aluno</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">@Model.Nome</h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-sm-end">
                            Nome:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt class="col-sm-4 text-sm-end">
                            Número Mecanográfico:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Al)
                        </dd>

                        <dt class="col-sm-4 text-sm-end">
                            Email:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-2 mt-3">
                <a asp-controller="AlunosTurma" asp-action="Index"
                   asp-route-id="@ViewBag.IdTurma"
                   class="btn btn-secondary w-100 w-sm-auto"
                   aria-label="Voltar para a lista de alunos">
                    Voltar para Lista
                </a>
            </div>
        </div>
    </div>
</main>

